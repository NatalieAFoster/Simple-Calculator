   private void getOperator (String btnText){
    msoperator=btnText.charAt(0);
    doubleone=doubleone+Double.parseDouble(Tf1.getText());
    Tf1.setText("");
    
    }
    private void Tf1ActionPerformed(java.awt.event.ActionEvent evt) {                                    
        // TODO add your handling code here:
    }                                   

    private void PercentActionPerformed(java.awt.event.ActionEvent evt) {                                        
        
    String button_text=Percent.getText();
    getOperator(button_text);
    decimalClick=0;//ensures that the decimal point cannot be pressed more than once
    }                                       

    private void bt8ActionPerformed(java.awt.event.ActionEvent evt) {                                    
    Tf1.setText(Tf1.getText()+bt8.getText()); //set buttom 8 in text field 1
    }                                   

    private void clearActionPerformed(java.awt.event.ActionEvent evt) {                                      
    doubleone=0;  //clears variable to zero
    doubletwo=0;  //clears variable to zero
    Tf1.setText(""); //clears textbox 1
    decimalClick=0; //ensures that the decimal point cannot be pressed more than once
    }                                     

    private void bt7ActionPerformed(java.awt.event.ActionEvent evt) {                                    
