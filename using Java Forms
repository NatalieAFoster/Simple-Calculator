    private void decimalActionPerformed(java.awt.event.ActionEvent evt) {                                        
    if(decimalClick==0){
    Tf1.setText(Tf1.getText()+decimal.getText()); 
    decimalClick=1; //Decimal point can only be clicked once
    }                                       
    }
    private void bt0ActionPerformed(java.awt.event.ActionEvent evt) {                                    
    Tf1.setText(Tf1.getText()+bt0.getText()); //set buttom 1 in text field 1
    }                                   

    private void divideActionPerformed(java.awt.event.ActionEvent evt) {                                       
     
        String button_text=divide.getText(); //allocate divide button to String Textbox 1
        getOperator(button_text);
        decimalClick=0;
    }                                      

    private void multiplyActionPerformed(java.awt.event.ActionEvent evt) {                                         
   
        String button_text=multiply.getText();//allocate multiply button to String Textbox 1
        getOperator(button_text);
        decimalClick=0;
    }                                        

    private void minusActionPerformed(java.awt.event.ActionEvent evt) {                                      

        String button_text=minus.getText(); //allocate minus button to String Textbox 1
        getOperator(button_text);
        decimalClick=0;
    }                                     

    private void plusActionPerformed(java.awt.event.ActionEvent evt) {                                     

        String button_text=plus.getText(); //allocate plus button to String Textbox 1
        getOperator(button_text);
        decimalClick=0;
    }                                    

   
    private void equalsActionPerformed(java.awt.event.ActionEvent evt) {                                       
    doubletwo=(Double.parseDouble(String.valueOf(Tf1.getText())));
        
    //switch operator for all calulator functions
    switch (msoperator){
        case '+':
            doubletwo = doubleone + Double.parseDouble(Tf1.getText());
            break;
                      
        case '-':
            doubletwo = doubleone - Double.parseDouble(Tf1.getText());
            break;
            
        case '/':
            doubletwo = doubleone / Double.parseDouble(Tf1.getText());
            break;
            
        case 'X':
            doubletwo = doubleone * Double.parseDouble(Tf1.getText());
            break;
            
        case '%': 
           doubletwo=(doubleone*Double.parseDouble(Tf1.getText())/100.00); //percentage calculation firstnumer/100*secondnumber
            break;
    }
    
    Tf1.setText(Double.toString(doubletwo));
    doubleone=0;
    
    }                                      


